# Application Settings
APP_NAME=AI CV Evaluator
ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cv_evaluator
# For SQLite (simpler): DATABASE_URL=sqlite:///./cv_evaluator.db

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# LLM API Keys (choose one or multiple)
# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenRouter (recommended for free tier)
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here

# LLM Configuration
LLM_PROVIDER=openrouter  # options: openai, anthropic, openrouter, gemini
LLM_MODEL=anthropic/claude-3-haiku  # for openrouter
# LLM_MODEL=gpt-3.5-turbo  # for openai
# LLM_MODEL=claude-3-haiku-20240307  # for anthropic
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# Vector Database (ChromaDB)
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=cv_evaluator_docs

# File Upload Settings
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf

# Evaluation Settings
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2
EVALUATION_TIMEOUT=300  # 5 minutes

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
